Sub ButtonBanner_Click

	banner.Initialize2("mainbanner", "2f71ec44-f30a-4043-9cc1-f32347a07f8b", banner.BANNER)
	
	Dim Width, Height, Left, Top As Int

	Width = 320dip
	Height = 50dip
	Top = 100%y - Height
	Left = (100%x - Width) / 2
	
	Activity.AddView(banner, Left, Top, Width, Height)
	
	Log("Banner called")
End Sub

Sub ButtonSmart_Click
	banner.Initialize2("smartbanner", "46a57d90-dc31-4995-9cad-defc8dcd776e", banner.SMART_BANNER)
	Activity.AddView(banner, 0, 100%y - 100dip, 100%x, 100dip)
	Log("flex banner initialized")
End Sub

